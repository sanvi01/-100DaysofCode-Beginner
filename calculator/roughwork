#calculator
def calculate(a, b, c):
    if c == '+':
        d = print(a + b)
    elif c == '-':
        d = print(a - b)
    elif c == '/':
        d = print(a / b)
    elif c == '*':
        d = print(a * b)
    else:
        print("invalid operator")
    return d

continue_ = True
while continue_:
    num1 = int(input("Enter the first number: "))
    operator = input("Enter operator: ")
    num2 = int(input("Enter the next number: "))
    calculate(num1, num2, operator)
    save_and_continue = input(f"Enter 'y'to continue with {d} or enter 'n' to start new calculation").lower()
    if save_and_continue == 'n':
    continue_ = False


    
